{
  "name": "ben-ten",
  "version": "0.1.0",
  "description": "Context persistence for Claude Code - named after Ben Tennyson's photographic memory",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ben-ten": "./dist/bin/ben-ten.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "prepare": "husky"
  },
  "keywords": ["claude", "claude-code", "mcp", "context", "persistence"],
  "author": "Rick Hightower",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@msgpack/msgpack": "^3.0.0",
    "commander": "^12.0.0",
    "lz4js": "^0.2.0",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": ["biome check --fix", "biome format --write"]
  }
}
